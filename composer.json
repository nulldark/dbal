{
  "name": "nulldark/dbal",
  "description": "DBAL Component",
  "license": "LGPL-2.1-only",
  "authors": [
    {
      "name": "Dominik Szamburski",
      "email": "dominikszamburski99@gmail.com"
    }
  ],
  "require": {
    "ext-pdo": "*"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "Nulldark\\DBAL\\": "src/DBAL/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nulldark\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true,
      "target-directory": "tools"
    }
  },
  "scripts": {
    "lint:check": "bin/phpcs",
    "lint:fix": "bin/php-cs-fixer fix --rules=@PSR12 src/",
    "static-analyze:phpmetrics": "bin/phpmetrics --report-html=.build/metrics src/",
    "static-analyze:phpstan": "bin/phpstan --memory-limit=-1",
    "tests:units": "bin/phpunit",
    "tools:clean": "rm -rf tools/*/vendor && rm -rf vendor/"
  }
}
